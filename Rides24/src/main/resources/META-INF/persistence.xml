<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="my-pu">
        <provider>com.objectdb.jpa.Provider</provider>
        <class>domain.Usuario</class>
        <class>domain.Encargado</class>
        <!-- Si tienes otras clases, añádelas aquí -->
        <properties>
            <property name="javax.persistence.jdbc.url" value="objectdb://localhost:6136/mydb.odb"/>
            <property name="javax.persistence.jdbc.driver" value="com.objectdb.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.user" value=""/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <!-- Si usas un servidor con credenciales, añade los datos de usuario y contraseña -->
        </properties>
    </persistence-unit>
</persistence>
